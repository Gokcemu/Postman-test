				}
			},
			"response": []
		},
		{
			"name": "Get all books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const books = pm.response.json();\r",
							"\r",
							"const book = books[0];\r",
							"\r",
							"if(book){\r",
							"    pm.globals.set(\"bookId\", book.id)\r",
							"}\r",
							"\r",
							"pm.test(\"Book found\", () =>{\r",
							"    pm.expect(book.type).to.eql(pm.collectionVariables.get(\"type\"))\r",
							"    pm.expect(book).to.be.an('object');\r",
							"})\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books?type={{type}}",
					"host": [
						"{{baseUrl}}"
					],
